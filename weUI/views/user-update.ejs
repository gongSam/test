<%- include('header') %>
<div class="admin-header"><%- include('admin/adminheader') %></div>

<div class="admin-wrapper">

    <div class="admin-sider">
        <div><%- include('admin/siderbar') %></div>
    </div>
    <div class="admin-body"><%- include('admin/admin-right-side') %>
        <div class="panel-heading">
            <button type="button" class="close" data-dismiss="modal"><span
                        aria-hidden="true">&times;</span><span
                        class="sr-only">Close</span></button>
            <h3 class="panel-title">会员管理</h3>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-striped bs-events-table">
                <thead>
                <tr>
                    <th>头像</th>
                    <th>姓名</th>
                    <th>性别</th>
                    <th>简介</th>
                    <th>编辑数据</th>
                </tr>
                </thead>
                <% users.forEach(function (user) { %>
                <tbody>
                <tr>
                    <td><img class="avatar_form" src="/images/<%= user.avatar %>"/></td>
                    <td><%= user.name %></td>
                    <td><%= user.gender %></td>
                    <td><%= user.bio %></td>
                    <td>
                        <div class="item">
                            <a href="/user-form/<%= user._id %>/remove">删除</a>
                            <a href="/user-form/<%= user._id %>/update" data-toggle="modal2"
                               id="btn1">修改</a>
                        </div>
                    </td>

                </tr>
                </tbody>
                <% }) %>

            </table>
        </div>
        <div class="modal modal2" id="myModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span
                                    aria-hidden="true">&times;</span><span
                                    class="sr-only">Close</span></button>
                        <h4 class="modal-title" id="myModalLabel">修改信息</h4>
                    </div>
                    <div class="modal-body">
                        <form role="form" method="post" enctype="multipart/form-data"
                              action="/user-form/<%= auser._id %>/edit">
                            <div class="form-group">
                                <label>用户名</label>
                                <input class="form-control" placeholder="请输入用户名" type="text" name="name"
                                       data-bv-notempty data-bv-notempty-message="姓名不能为空" value=<%= auser.name %>>
                            </div>

                            <div class="form-group">
                                <label>密码</label>

                                <input class="form-control" name='password' type="password"
                                       placeholder="请输入修改的密码" value=
                                        <% auser.password %>
                                >
                            </div>

                            <div class="form-group">
                                <label>性别</label>
                                <select class="form-control" name="gender">
                                    <option value="m">男</option>
                                    <option value="f">女</option>
                                    <option value="x">保密</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>头像</label>
                                <input type="file" class="form-control" name="avatar" value=<%= auser.avatar %>/>
                            </div>

                            <div class="form-group">
                                <label>个人简介</label>
                                <textarea name="bio" class="form-control" rows="5"
                                          v-model="user.bio"><%= auser.bio %></textarea>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default" data-dismiss="modal">关闭
                                </button>
                                <input type="submit" class="btn btn-large  btn-primary" value="修改"/>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!--<script type="text/javascript" src="../public/javascripts/update.js">-->
            <script type="text/javascript">
                $('#myModal').modal('show')
            </script>
            <%- include('footer') %>

