<div class="ui grid">
    <div class="four wide column"></div>
    <div class="eight wide column">

        <% if (success) { %>
        <div class="alert alert-success" role="alert">
            <p><%= success %></p>
        </div>
        <% } %>

        <% if (error) { %>
        <div class="alert alert-warning" role="alert">
            <p><%= error %></p>
        </div>
        <% } %>

    </div>
</div>