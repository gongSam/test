<%- include('header') %>
<div class="admin-header"><%- include('admin/adminheader') %></div>

<div class="admin-wrapper">

    <div class="admin-sider"><%- include('admin/siderbar') %></div>
    <div class="admin-body"><%- include('admin/admin-right-side') %>
        <div class="panel-heading">
            <h3 class="panel-title">页面设置</h3>
        </div>
        <div class="panel-body">
            <div class="container">

                <form id="defaultform" role="form" method="post" enctype="multipart/form-data" action="/admin/admin-pagesetting">


                    <div class="form-group">
                        <label>模块标题</label>
                        <input type="text" name="title" class="form-control" placeholder="请输入您的标题" id="title">
                    </div>

                    <div class="form-group">
                        <label>模块图片</label>
                        <input type="file" class="form-control" name="avatarWsetting" id="avatarWsetting">
                    </div>

                    <div class="form-group">
                        <label>文章标题</label>
                        <input type="text" name="contenttitle" class="form-control" placeholder="请输入文章的标题" id="contenttitle">
                    </div>

                    <div class="form-group">
                        <label>内容</label>
                        <textarea type="text" name="content" class="form-control" rows="3"
                                  placeholder="请输入您想要输入的内容" id="content"></textarea>
                    </div>
                    <div class="form-group">
                        <%- include('notification') %>
                    </div>
                    <button type="submit" class="btn btn-default">提交</button>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
<script type="text/javascript">
    $(function (){
        $('#defaultform')
                .bootstrapValidator({
                    message: '这是一个非法的值',
                    feedbackIcons: {
                        valid: 'glyphicon glyphicon-ok',
                        invalid: 'glyphicon glyphicon-remove',
                        validating: 'glyphicon glyphicon-refresh'
                    },
                    fields: {
                        title: {
                            message: '用户名不合法',
                            validators: {
                                notEmpty: {
                                    message: '模块标题不能为空',
                                },
                                stringLength: {
                                    min: 4,
                                    max: 10,
                                    message: '模块标题长度必须在6到10之间',
                                },
                            }
                        },
                        contenttitle: {
                            validators: {
                                notEmpty: {
                                    message: '文章标题不能为空',
                                },
                                stringLength: {
                                    min: 4,
                                    max: 10,
                                    message: '文章标题长度必须在6到10之间',
                                },
                            }
                        },
                        avatarWsetting: {
                            validators: {
                                notEmpty: {
                                    message: '模块图片不能为空'
                                }
                            }
                        },
                        content: {
                            validators: {
                                notEmpty: {
                                    message: '文章内容不能为空'
                                },
                                stringLength: {
                                    min: 20,
                                    max: 30,
                                    message: '文章内容必须在20到30个字之间',
                                },
                            }
                        },
                    }
                });
    })
</script>
<%- include('footer') %>